{
  "name": "@prospector-btc/source",
  "version": "4.1.0",
  "description": "Distributed Cryptographic Audit System (Hydra-Zero v4.1)",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Raz Podestá",
    "email": "raz.podesta@metashark.tech"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "postinstall": "echo '✅ Dependencias instaladas. Ejecuta pnpm build:all para compilar.'",
    "prepare": "husky install",
    "clean": "rimraf dist target .nx node_modules",
    "start": "nx run-many --target=serve --projects=orchestrator,web-dashboard --parallel",
    "dev:web": "nx serve web-dashboard",
    "dev:api": "nx serve orchestrator",
    "i18n:gen": "ts-node --project tsconfig.base.json apps/web-dashboard/tools/scripts/generate-i18n.ts",
    "build:miner": "nx build miner-worker --prod",
    "build:all": "nx run-many --target=build --all --prod",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "format": "nx format:write && cargo fmt",
    "docker:orch": "docker build -f apps/orchestrator/Dockerfile -t prospector/orchestrator .",
    "docker:web": "docker build -f apps/web-dashboard/Dockerfile -t prospector/web-dashboard .",
    "sync:types": "typeshare ./libs/domain/models-rs --lang=typescript --output-file=./libs/infra/api-client-ts/src/lib/generated-types.ts",
    "build:web": "pnpm i18n:gen && nx build web-dashboard --prod --skip-nx-cache"

  },
  "dependencies": {
    "next": "16.0.10",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "@tanstack/react-query": "^5.90.12",
    "axios": "^1.13.2",
    "zustand": "^5.0.9",
    "zod": "^4.1.13",
    "tailwindcss": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "lucide-react": "^0.561.0",
    "framer-motion": "^12.23.26",
    "sonner": "^2.0.7",
    "react-hook-form": "^7.68.0",
    "@hookform/resolvers": "^5.2.2",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^4.6.0",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "fingerprint-generator": "^2.1.78",
    "fingerprint-injector": "^2.1.78",
    "ghost-cursor-playwright": "^2.1.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "nx": "22.2.1",
    "@nx/next": "22.2.1",
    "@nx/react": "22.2.1",
    "@nx/js": "22.2.1",
    "@nx/jest": "22.2.1",
    "@nx/eslint": "22.2.1",
    "@nx/workspace": "22.2.1",
    "@nx/devkit": "22.2.1",
    "@monodon/rust": "^2.3.0",
    "typescript": "5.7.3",
    "ts-node": "10.9.2",
    "@types/node": "22.10.5",
    "@types/react": "19.0.4",
    "@types/react-dom": "19.0.2",
    "eslint": "9.18.0",
    "eslint-config-next": "16.0.10",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@testing-library/react": "16.2.0",
    "@testing-library/jest-dom": "6.6.3",
    "autoprefixer": "10.4.20",
    "postcss": "8.5.1",
    "rimraf": "^6.0.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7"
  }
}
