{
  "name": "@prospector-btc/source",
  "version": "4.2.0",
  "description": "Distributed Cryptographic Audit System (Hydra-Zero v4.2)",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "postinstall": "echo 'âœ… Dependencies installed.'",
    "prepare": "husky install",
    "clean": "rimraf dist target .nx node_modules .next",
    "// --- ESTRATO 1: CICLO DE VIDA (DESARROLLO) ---": "",
    "start": "nx run-many --target=serve --projects=orchestrator,web-dashboard --parallel",
    "dev:web": "nx serve web-dashboard",
    "dev:api": "nx serve orchestrator",
    "reset:nx": "nx reset && rimraf .nx/workspace-data",
    "// --- ESTRATO 2: CALIDAD Y PRUEBAS (QA MATRIX) ---": "",
    "test": "nx run-many --target=test --all",
    "test:prover": "nx test prospector-prover --verbose",
    "test:core": "nx run-many --target=test --projects=tag:layer:core",
    "test:domain": "nx run-many --target=test --projects=tag:layer:domain",
    "test:infra": "nx run-many --target=test --projects=tag:layer:infra",
    "lint": "nx run-many --target=lint --all",
    "type-check": "nx run-many --target=type-check --all",
    "format": "nx format:write && cargo fmt",
    "// --- ESTRATO 3: OPERACIONES Y PROVEEDORES (OPS) ---": "",
    "prover:gen": "cargo run --bin prover -- --output dist/proof",
    "build:web": "pnpm i18n:gen && nx build web-dashboard --prod --skip-nx-cache",
    "build:miner": "nx build miner-worker --prod",
    "build:all": "nx run-many --target=build --all --prod",
    "// --- ESTRATO 4: HERRAMIENTAS Y SCRIPTS ---": "",
    "i18n:gen": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\",\\\"esModuleInterop\\\":true}\" ts-node --project tsconfig.base.json apps/web-dashboard/tools/scripts/generate-i18n.ts",
    "validate:system": "ts-node --project tools/scripts/tsconfig.json tools/scripts/validate-system.ts",
    "// --- DOCKER OPS ---": "",
    "docker:orch": "docker build -f apps/orchestrator/Dockerfile -t prospector/orchestrator .",
    "docker:web": "docker build -f apps/web-dashboard/Dockerfile -t prospector/web-dashboard ."
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/react-query": "^5.90.12",
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fingerprint-generator": "^2.1.78",
    "fingerprint-injector": "^2.1.78",
    "framer-motion": "^11.15.0",
    "ghost-cursor-playwright": "^2.1.0",
    "lucide-react": "^0.469.0",
    "next": "15.0.0",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^3.26.3",
    "next-themes": "^0.4.4",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.54.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.8.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@monodon/rust": "^1.3.0",
    "@nx/devkit": "20.2.1",
    "@nx/eslint": "20.2.1",
    "@nx/jest": "20.2.1",
    "@nx/js": "20.2.1",
    "@nx/next": "20.2.1",
    "@nx/react": "20.2.1",
    "@nx/workspace": "20.2.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/eventsource": "^1.1.15",
    "@types/node": "22.10.5",
    "@types/react": "19.0.4",
    "@types/react-dom": "19.0.2",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "9.18.0",
    "eslint-config-next": "15.0.0",
    "eventsource": "^2.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nx": "20.2.1",
    "postcss": "8.5.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "uuid": "^11.0.3"
  }
}
