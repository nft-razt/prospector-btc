{
  "name": "@prospector-btc/source",
  "version": "3.5.0",
  "private": true,
  "scripts": {
    "// BUILD PIPELINE": "--------------------------------",
    "postinstall": "pnpm i18n:gen",
    "i18n:gen": "cross-env TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\",\\\"esModuleInterop\\\":true}\" ts-node --project tsconfig.base.json apps/web-dashboard/tools/scripts/generate-i18n.ts",
    "build:web": "pnpm i18n:gen && nx build web-dashboard --prod --skip-nx-cache",

    "// DEV OPS": "-------------------------------------",
    "start": "nx run-many --target=serve --projects=orchestrator,web-dashboard --parallel",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all"
  },
  "dependencies": {
    "next": "16.0.8",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "nx": "22.2.0",
    "@nx/next": "22.2.0",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "^3.26.3",
    "axios": "^1.7.9",
    "zod": "^3.24.1",
    "zustand": "^5.0.3",
    "@tanstack/react-query": "^5.64.1",
    "lucide-react": "^0.473.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "chalk": "4.1.2"
  },
  "devDependencies": {
    "typescript": "5.7.3",
    "@types/node": "22.10.5",
    "@types/react": "19.0.4",
    "@types/react-dom": "19.0.2",
    "ts-node": "10.9.2",
    "cross-env": "^7.0.3",
    "tailwindcss": "3.4.17",
    "postcss": "8.4.49",
    "autoprefixer": "10.4.20",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4"
  },
  "packageManager": "pnpm@9.15.3"
}
