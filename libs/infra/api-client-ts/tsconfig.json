{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "../../../dist/out-tsc/libs/infra/api-client-ts",
    "tsBuildInfoFile": "../../../dist/out-tsc/libs/infra/api-client-ts.tsbuildinfo",
    "types": ["node", "react"],
    "paths": {
      "@prospector/api-contracts": ["libs/domain/api-contracts/src/index.ts"],
      "@prospector/infra-supabase": ["libs/infra/supabase/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    { "path": "../../domain/api-contracts" },
    { "path": "../supabase" }
  ]
}
