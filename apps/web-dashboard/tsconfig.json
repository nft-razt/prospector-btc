{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "types": ["node", "jest", "react", "react-dom"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@prospector/api-contracts": [
        "../../libs/domain/api-contracts/src/index.ts"
      ],
      "@prospector/api-client": ["../../libs/infra/api-client-ts/src/index.ts"],
      "@prospector/heimdall-ts": ["../../libs/shared/heimdall-ts/src/index.ts"],
      "@prospector/feat-telemetry": [
        "../../libs/features/telemetry-ui/src/index.ts"
      ],
      "@prospector/ui-kit": ["../../libs/shared/ui-kit/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    // üî• CORRECCI√ìN CR√çTICA: Ruta expl√≠cita para evitar reescritura autom√°tica
    "../../dist/apps/web-dashboard/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
