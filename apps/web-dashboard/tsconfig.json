{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "jest", "react", "react-dom"],

    "paths": {
      // 1. ALIAS LOCAL (Para imports internos del dashboard)
      "@/*": ["apps/web-dashboard/*"],

      // 2. RESTAURACIÓN DE ALIAS GLOBALES (Para ver las libs)
      // Nota: Rutas relativas a la raíz del workspace (baseUrl: ".")
      "@prospector/api-client": ["libs/infra/api-client-ts/src/index.ts"],
      "@prospector/heimdall-ts": ["libs/shared/heimdall-ts/src/index.ts"],
      "@prospector/feat-telemetry": ["libs/features/telemetry-ui/src/index.ts"]

      // Nota: Si ya migraste i18n a local, esta línea sobra,
      // pero dejarla no rompe nada si la librería aún existe.
      // "@prospector/i18n-config": ["libs/shared/i18n-config/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
