{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "jest", "react", "react-dom"],

    // ⬇️ CORRECCIÓN MAESTRA PARA VERCEL
    "baseUrl": ".",
    "paths": {
      // 1. Alias interno (App)
      "@/*": ["./*"],

      // 2. Alias externos (Libs - Ruta relativa desde apps/web-dashboard)
      "@prospector/api-client": ["../../libs/infra/api-client-ts/src/index.ts"],
      "@prospector/heimdall-ts": ["../../libs/shared/heimdall-ts/src/index.ts"],
      "@prospector/feat-telemetry": ["../../libs/features/telemetry-ui/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
