{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "incremental": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@/*": ["./*"],
      "@prospector/api-contracts": ["../../libs/domain/api-contracts/src/index.ts"],
      "@prospector/api-client": ["../../libs/infra/api-client-ts/src/index.ts"],
      "@prospector/crypto-vault": ["../../libs/core/client-vault/src/index.ts"],
      "@prospector/heimdall-ts": ["../../libs/shared/heimdall-ts/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../libs/domain/api-contracts" },
    { "path": "../../libs/infra/api-client-ts" },
    { "path": "../../libs/core/client-vault" },
    { "path": "../../libs/shared/heimdall-ts" }
  ]
}
